<!DOCTYPE html>
<html>
	<head>
		<title>Edit a Page</title>
		<link rel="stylesheet" type="text/css" href="/stylesheets/main.css"/>
		<link rel="stylesheet" type="text/css" href="/stylesheets/admin.css"/>
	</head>
	<body>
		<header>Advanced - Edit Page</header>
		<% include admin-header %>
		
		<div class="content bg">
			<h2>Edit Page</h2><hr class="short">
			<% if(typeof urlErr !== 'undefined') { %>
			<h4 class="auth-error"><%= urlErr %></h4>
			<% } %>
			<form method="POST" action="/admin/edit/<%= page._id %>">
			<!-- Title -->
				<label class="prettylabel">Title:</label> <br/>
				<input type="text" name="title" value="<%= page.title %>" required/> <br/>
			<!-- Content -->
				<label class="prettylabel">Content:</label> <br/>
				<textarea name="content" rows="10" cols="50"><%= page.content %></textarea> <br/>
			<!-- URL -->
				<label class="prettylabel">URL:</label> <br/>
				<input type="text" name="URL" value="<%= page.url %>" /> <br/>
			<!-- Template -->
				<label class="prettylabel">Template:</label> <br/>
				<select name="template" required>
					<option value="t1">Template 1</option>
					<option value="t2">Template 2</option>
					<option value="t3">Template 3</option>
				</select> <br/>
			<!-- Clear/Save -->
				<input type="reset" value="Revert"/>
				<input type="submit" value="Save"/>
			</form>
		</div>
		<% include footer %>
	</body>
</html>
