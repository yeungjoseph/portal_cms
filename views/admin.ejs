<!DOCTYPE html>
<html>
	<% include admin-header %>
	<body>
		<header>Admin Dashboard</header>
		<nav>
			<a href="/admin">Home</a>  |
			<a href="/admin/addpage">Add Page</a>  |
			<a href="/admin/editadmin">Edit Account</a>  |
			<a href="/admin/logout" id="login">Logout</a>	
		</nav>
		
		<div class="content bg">
			<table id="dash">
				<caption>Table of Pages</caption>
				<% if(pages.length) { %>
					<tr>
						<th>Title</th>
						<th>Last Updated</th>
						<th>Options</th>
					</tr>
					<% for (var i = 0; i < pages.length; i++) {%>
						<tr>
							<td><a href="/<%= pages[i].url %>"</a>
								<%= pages[i].title %></a></td>
							<td>January 7, 2018</td>
							<td>
								<form class='within' action='/admin/delete/<%= pages[i].url %>' method='POST'>
									<button type='submit'>Delete</button>
								</form>
								<form class='within' action='/admin/edit/<%= pages[i].url %>' method='GET'>
									<button type='submit'>Edit</button>
								</form>
								<!-- Condense this eventually -->
								<% if (pages[i].visible) { %>
								<form class='within' action='/admin/visible/<%= pages[i].url %>' method='POST'>
									<button class='visible' type='submit'>Visible</button>
								</form>
								<% } else { %>
								<form class='within' action='/admin/visible/<%= pages[i].url %>' method='POST'>
									<button class='invisible' type='submit'>Visible</button>
								</form>
								<% } %>
							</td>
						</tr>
					<% } %>
				<% } %>

				<% if(!pages.length) { %>
					<tr><td>No pages have been created yet!</td></tr>
				<% } %>
				
			</table>
		</div>
		<% include footer %>
	</body>
</html>
